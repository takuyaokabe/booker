<h2>Books</h2>

<table>
	<tr>
	    <th>body</th>
	    <th>title</th>
        <th colspan="3"></th>
    </tr>

    

    
        
    	    <% @books.each do |book| %>
	<tr>
			<td><%= book.title %></td>
	        <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book.id)%></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>


	</tr>
	<% end%>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<p>error</p>
<% @book.errors.full_messages.each do |msg| %>
<%= msg %>
	<% end%>
<% end %>

<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>


<%= f.submit "Create Book" %>
<% end %>
